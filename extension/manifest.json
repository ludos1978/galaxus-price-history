{
  "manifest_version": 3,
  "name": "Galaxus Price Analyzer",
  "version": "1.0.0",
  "description": "Analyze price history on Galaxus/Digitec - shows average, median, std deviation and charts",
  "author": "Galaxus Price History Project",
  "homepage_url": "https://github.com/ludos1978/galaxus-price-history",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "host_permissions": [
    "https://www.galaxus.ch/*",
    "https://www.galaxus.de/*",
    "https://www.digitec.ch/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.galaxus.ch/*/product/*",
        "https://www.galaxus.de/*/product/*",
        "https://www.digitec.ch/*/product/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://www.galaxus.ch/*", "https://www.galaxus.de/*", "https://www.digitec.ch/*"]
    }
  ]
}
